{
    "extends": "../tsconfig-base.json",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "declarationMap": true,
        "module": "commonjs",
        "composite": true,
        "outDir": "./build",
        "rootDir": "./src",
    },
    "exclude": [
        "**/__tests__/**"
    ],
    "include": [
        "src"
    ],
}
